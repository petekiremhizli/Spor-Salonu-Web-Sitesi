@model FitnessCenterProject.Models.Randevu

@{
    ViewData["Title"] = "Randevu Sil";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-danger">⚠️ Randevuyu Sil</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <p>Bu randevuyu silmek istediğinizden emin misiniz?</p>

            <table class="table table-bordered">
                <tr>
                    <th>Hizmet</th>
                    <td>@Model.Hizmet.Ad</td>
                </tr>
                <tr>
                    <th>Antrenör</th>
                    <td>@Model.Antrenor.AdSoyad</td>
                </tr>
                <tr>
                    <th>Başlangıç</th>
                    <td>@Model.BaslangicZamani.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Bitiş</th>
                    <td>@Model.BitisZamani.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Durum</th>
                    <td>@Model.Durum</td>
                </tr>
            </table>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger w-100">🗑️ Sil</button>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅️ Geri</a>
    </div>
</div>
