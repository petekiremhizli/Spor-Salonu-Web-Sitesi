@model List<FitnessCenterProject.Models.Randevu>

@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-5">

    <h2 class="text-center mb-4">📅 Randevularım</h2>

    @* ✅ Başarı Mesajı *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }

    @* ❌ Hata Mesajı *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center">
            @TempData["Error"]
        </div>
    }

    <div class="card shadow">
        <div class="card-body">

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    Henüz randevunuz bulunmamaktadır.
                </div>
            }
            else
            {
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Hizmet</th>
                            <th>Antrenör</th>
                            <th>Başlangıç</th>
                            <th>Bitiş</th>
                            <th>Durum</th>
                            <th class="text-center">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@r.Hizmet.Ad</strong>
                                </td>
                                <td>
                                    @r.Antrenor.AdSoyad
                                </td>
                                <td>
                                    @r.BaslangicZamani.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    @r.BitisZamani.ToString("dd.MM.yyyy HH:mm")
                                </td>
                                <td>
                                    @if (r.Durum == "Beklemede")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            Beklemede
                                        </span>
                                    }
                                    else if (r.Durum == "Onaylandi")
                                    {
                                        <span class="badge bg-success">
                                            Onaylandı
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            İptal
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (r.BaslangicZamani > DateTime.Now)
                                    {
                                        <a asp-action="Edit"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-warning me-1">
                                            Düzenle
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@r.Id"
                                           class="btn btn-sm btn-danger">
                                            Sil
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            İşlem yapılamaz
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

        </div>
    </div>

    <div class="text-center mt-4">
        <a asp asp-controller="Randevu" asp-action="Create" class="btn btn-primary btn-lg">
            ➕ Yeni Randevu Al
        </a>
    </div>

</div>
