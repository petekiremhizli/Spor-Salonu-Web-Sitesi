@model FitnessCenterProject.Models.Randevu

@{
    ViewData["Title"] = "Randevu Detay";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">🔍 Randevu Detay</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered">
                <tr>
                    <th>Hizmet</th>
                    <td>@Model.Hizmet.Ad</td>
                </tr>
                <tr>
                    <th>Antrenör</th>
                    <td>@Model.Antrenor.AdSoyad</td>
                </tr>
                <tr>
                    <th>Başlangıç</th>
                    <td>@Model.BaslangicZamani.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Bitiş</th>
                    <td>@Model.BitisZamani.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
                <tr>
                    <th>Durum</th>
                    <td>
                        @switch (Model.Durum)
                        {
                            case "Beklemede":
                                <span class="badge bg-warning text-dark">Beklemede</span>
                                break;
                            case "Onaylandi":
                                <span class="badge bg-success">Onaylandı</span>
                                break;
                            case "Iptal":
                                <span class="badge bg-danger">İptal</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.Durum</span>
                                break;
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅️ Geri</a>
    </div>
</div>
