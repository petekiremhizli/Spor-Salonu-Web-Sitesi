@{
    ViewData["Title"] = "Admin Paneli";
}

<div class="container py-5">

    <!-- BAŞLIK -->
    <div class="text-center mb-5">
        <h3 class="fw-bold">Admin Paneli</h3>
        <p class="text-muted">Sistem yönetim işlemleri</p>
    </div>

    <div class="row g-4 justify-content-center">

        <!-- HİZMET -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center admin-card">
                <div class="card-body">
                    <i class="bi bi-list-check display-4 text-primary mb-3"></i>
                    <h5 class="fw-bold">Hizmet Yönetimi</h5>
                    <p class="text-muted">Fitness, Yoga, Pilates</p>
                    <a asp-controller="Hizmet" asp-action="Index"
                       class="btn btn-outline-primary w-100">
                        Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- ANTRENÖR -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center admin-card">
                <div class="card-body">
                    <i class="bi bi-person-badge display-4 text-success mb-3"></i>
                    <h5 class="fw-bold">Antrenör Yönetimi</h5>
                    <p class="text-muted">Ekle / düzenle</p>
                    <a asp-controller="Antrenor" asp-action="Index"
                       class="btn btn-outline-success w-100">
                        Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- ANTRENÖR MÜSAİTLİK -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center admin-card">
                <div class="card-body">
                    <i class="bi bi-clock-history display-4 text-warning mb-3"></i>
                    <h5 class="fw-bold">Antrenör Müsaitlik</h5>
                    <p class="text-muted">Çalışma saatleri</p>
                    <a asp-controller="Musaitlik" asp-action="Index"
                       class="btn btn-outline-warning w-100">
                        Yönet
                    </a>
                </div>
            </div>
        </div>

        <!-- RANDEVU -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100 text-center admin-card">
                <div class="card-body">
                    <i class="bi bi-calendar-check display-4 text-danger mb-3"></i>
                    <h5 class="fw-bold">Randevu Yönetimi</h5>
                    <p class="text-muted">Tüm randevular</p>
                    <a asp-controller="RandevuOnay" asp-action="Index"
                       class="btn btn-outline-danger w-100">
                        Yönet
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- HOVER EFECT -->
<style>
    .admin-card {
        transition: all 0.3s ease;
        border-radius: 15px;
    }

        .admin-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
</style>
