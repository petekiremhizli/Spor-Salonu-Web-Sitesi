@model List<FitnessCenterProject.Models.Antrenor>

<h2>Antrenörler</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<a asp-action="Create" class="btn btn-primary mb-3">Yeni Antrenör Ekle</a>

<br />
<a asp-controller="Adminn" asp-action="Index" class="btn btn-secondary">
    Admin Paneline Dön
</a>
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Uzmanlık Alanları</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var antrenor in Model)
        {
            <tr>
                <td>@antrenor.AdSoyad</td>
                <td>
                    @foreach (var ah in antrenor.AntrenorHizmetler)
                    {
                        <span class="badge bg-info me-1">@ah.Hizmet.Ad</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@antrenor.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@antrenor.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Silmek istediğinize emin misiniz?')">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
