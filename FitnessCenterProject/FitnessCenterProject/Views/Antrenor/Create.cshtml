@model FitnessCenterProject.Models.Antrenor

<h2>Yeni Antrenör Ekle</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <!-- Geri Butonu -->
    <a asp-action="Index" class="btn btn-secondary">
        ⬅️ Geri
    </a>
    <br />
    <br />
    <div class="mb-3">
        <label class="form-label">Ad Soyad</label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Uzmanlık Alanları</label>
        @foreach (var hizmet in ViewBag.Hizmetler)
        {
            <div class="form-check">
                <input class="form-check-input"
                       type="checkbox"
                       name="seciliHizmetler"
                       value="@hizmet.Id" />
                <label class="form-check-label">@hizmet.Ad</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
