@{
    ViewData["Title"] = "Anasayfa";
}

<!-- ==================== FULL WIDTH HERO ==================== -->
<div style="
    width: 100vw;
    margin-left: calc(50% - 50vw);
    background: url('/images/giris.jpg') center/cover no-repeat;
    height: 100vh;
    position: relative;
">

    <!-- Koyu overlay -->
    <div style="
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.55);
        z-index: 1;
    "></div>

    <!-- İçerik -->
    <div class="d-flex align-items-center justify-content-start" style="
        position: relative;
        z-index: 2;
        height: 100%;
        padding: 50px;
    ">
        <div>
            <h1 style="font-size:65px; font-weight:900; line-height:1.1; color:white;">
                GYM <span style="color:#f2c700;">CLUB</span>
            </h1>

            <p style="font-size:22px; max-width:900px; margin-top:20px; color:white;">
                Şehrin en modern spor salonuna hoş geldiniz! En yeni ekipmanlar, uzman eğitmenler ve yapay zekâ destekli programlarımızla hedeflerinize daha hızlı ulaşmanızı sağlıyoruz.
            </p>
        </div>
    </div>
</div>


<!-- ==================== ÇALIŞMA SAATLERİ (FULL WIDTH HERO STYLE) ==================== -->
<section style="
    width:100vw;
    margin-left:calc(50% - 50vw);
    background: url('/images/calismasaatleri.jpg') center/cover no-repeat;
    position: relative;
    color: white;
    padding:100px 20px;
">

    <!-- Koyu overlay -->
    <div style="
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        background: rgba(0,0,0,0.6);
        z-index:1;
    "></div>

    <!-- İçerik -->
    <div style="position:relative; z-index:2; max-width:1200px; margin:auto; text-align:center;">

        <!-- Başlık ve açıklama -->
        <h2 style="font-size:48px; font-weight:900; margin-bottom:20px;">Çalışma Saatlerimiz</h2>
        <p style="font-size:18px; margin-bottom:50px;">
            Spor salonumuz her gün hizmetinizde! Size uygun saatlerde antrenman yapabilirsiniz.
        </p>

        <!-- Kartlar -->
        <div class="row g-4 justify-content-center">

            <!-- Pazartesi - Cuma -->
            <div class="col-md-3">
                <div class="card shadow-sm p-4" style="background: rgba(17,17,17,0.85); border:1px solid #333; color:white;">
                    <h5 class="fw-bold">Pazartesi - Cuma</h5>
                    <p>06:00 - 23:00</p>
                </div>
            </div>

            <!-- Cumartesi -->
            <div class="col-md-3">
                <div class="card shadow-sm p-4" style="background: rgba(17,17,17,0.85); border:1px solid #333; color:white;">
                    <h5 class="fw-bold">Cumartesi</h5>
                    <p>08:00 - 21:00</p>
                </div>
            </div>

            <!-- Pazar -->
            <div class="col-md-3">
                <div class="card shadow-sm p-4" style="background: rgba(17,17,17,0.85); border:1px solid #333; color:white;">
                    <h5 class="fw-bold">Pazar</h5>
                    <p>09:00 - 19:00</p>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- ==================== FULL WIDTH CTA ==================== -->
<section style="
    width:100vw;
    margin-left:calc(50% - 50vw);
    background: linear-gradient(45deg, #000, #222);
    padding:120px 20px;
">

    <div class="text-center text-white">

        <h2 class="fw-bold display-5">
            Sizin Hikayeniz Ne Zaman Başlıyor?
        </h2>

        <p class="lead mt-3 text-secondary">
            GYM CLUB topluluğuna katılarak hayatınızı değiştirmeye başlayın.
        </p>

        <a href="/Account/SignUp"
           class="btn btn-warning btn-lg mt-4 px-5 fw-bold rounded-pill shadow">
            Bize Katılın
        </a>

    </div>

</section>
