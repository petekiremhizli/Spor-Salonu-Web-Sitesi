@model List<Hizmet>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    :root {
        --gym-gold: #f2c700;
        --gym-dark: #111111;
    }

    /* Hero Bölümü Düzenlemesi */
    .services-header {
        width: 100vw;
        margin-left: calc(50% - 50vw);
        background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('/images/services_bg.jpg') center/cover no-repeat fixed;
        padding: 120px 0 80px;
        text-align: center;
        color: white;
        margin-bottom: 80px;
    }

    /* Kart Tasarımı */
    .service-card {
        border: none;
        border-radius: 25px;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        background: #ffffff;
        position: relative;
        z-index: 1;
        overflow: hidden;
    }

        .service-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 0;
            background: var(--gym-dark);
            transition: all 0.5s ease;
            z-index: -1;
        }

        .service-card:hover::before {
            height: 100%;
        }

        .service-card:hover {
            transform: translateY(-15px);
            box-shadow: 0 25px 50px rgba(0,0,0,0.15) !important;
        }

            .service-card:hover h4,
            .service-card:hover p,
            .service-card:hover .text-muted {
                color: #ffffff !important;
            }

    /* İkon Stili */
    .icon-wrapper {
        width: 90px;
        height: 90px;
        background: #fdf7e2;
        color: var(--gym-gold);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
        margin-bottom: 25px;
        transition: all 0.5s ease;
    }

    .service-card:hover .icon-wrapper {
        background: var(--gym-gold);
        color: var(--gym-dark);
        transform: rotateY(180deg);
    }

    /* Fiyat Alanı */
    .price-tag {
        font-size: 28px;
        font-weight: 900;
        color: var(--gym-dark);
        transition: all 0.5s ease;
    }

    .service-card:hover .price-tag {
        color: var(--gym-gold);
    }

    .currency {
        font-size: 16px;
        vertical-align: top;
        margin-right: 2px;
    }

    /* Alt Çizgi Animasyonu */
    .title-underline {
        width: 50px;
        height: 4px;
        background: var(--gym-gold);
        margin: 15px auto;
        transition: width 0.3s ease;
    }

    .service-card:hover .title-underline {
        width: 100px;
    }
</style>

<section class="services-header shadow-lg">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">HİZMETLERİMİZ</h1>
        <p class="lead opacity-75 mx-auto fs-4" style="max-width: 800px; font-weight: 300;">
            Kişisel hedeflerinize en uygun antrenmanı seçin ve profesyonel dünyamıza adım atın.
        </p>
    </div>
</section>

<div class="container mb-5 pb-5">
    <div class="row g-5">
        @if (Model != null && Model.Any())
        {
            @foreach (var h in Model)
            {
                <div class="col-xl-4 col-md-6">
                    <div class="card h-100 service-card shadow-sm p-4">
                        <div class="card-body d-flex flex-column text-center">

                            <div class="icon-wrapper mx-auto shadow-sm">
                                @if (h.Ad.Contains("Yoga", StringComparison.OrdinalIgnoreCase))
                                {
                                    <i class="bi bi-body-text"></i>
                                }
                                else if (h.Ad.Contains("Pilates", StringComparison.OrdinalIgnoreCase))
                                {
                                    <i class="bi bi-infinity"></i>
                                }
                                else if (h.Ad.Contains("Fitness", StringComparison.OrdinalIgnoreCase))
                                {
                                    <i class="bi bi-capslock-fill"></i>
                                }
                                else
                                {
                                    <i class="bi bi-fire"></i>
                                }
                            </div>

                            <h4 class="fw-bold mb-1">@h.Ad</h4>
                            <div class="title-underline"></div>

                            <p class="text-muted px-3 mb-4 mt-2" style="font-size: 0.95rem;">
                                Uzman kadromuzla hazırlanan @h.Ad seansları, @h.Sure dakikalık yoğun programlarla sizi hedefinize ulaştırır.
                            </p>

                            <div class="d-flex justify-content-center gap-2 mb-4">
                                <span class="badge rounded-pill bg-light text-dark border py-2 px-3">
                                    <i class="bi bi-stopwatch me-1 text-warning"></i> @h.Sure Dakika
                                </span>
                                <span class="badge rounded-pill bg-light text-dark border py-2 px-3">
                                    <i class="bi bi-person-check me-1 text-warning"></i> Birebir
                                </span>
                            </div>

                            <div class="mt-auto">
                                <div class="price-tag mb-4">
                                    <span class="currency">₺</span>@h.Ucret
                                </div>
                                <a href="/Iletisim" class="btn btn-warning w-100 rounded-pill fw-bold py-3 text-uppercase shadow-sm">
                                    HEMEN BAŞLA
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="alert alert-light border-dashed">
                    <i class="bi bi-search fs-1 text-muted d-block mb-3"></i>
                    <h5 class="text-muted">Şu an aktif bir hizmet bulunmamaktadır.</h5>
                </div>
            </div>
        }
    </div>
</div>

<div class="container-fluid bg-dark py-5 text-white">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <h2 class="fw-bold text-warning mb-1">60+</h2>
                <p class="small text-uppercase opacity-50">Haftalık Ders</p>
            </div>
            <div class="col-md-4">
                <h2 class="fw-bold text-warning mb-1">AI</h2>
                <p class="small text-uppercase opacity-50">Özel Program Analizi</p>
            </div>
            <div class="col-md-4">
                <h2 class="fw-bold text-warning mb-1">%100</h2>
                <p class="small text-uppercase opacity-50">Memnuniyet Garantisi</p>
            </div>
        </div>
    </div>
</div>