@{
    ViewData["Title"] = "Diyet Önerisi";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Diyet Önerisi Al</h3>
                </div>
                <div class="card-body">

                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="yas" class="form-label">Yaş</label>
                            <input type="number" class="form-control" id="yas" name="yas" placeholder="Yaşınızı girin" required />
                        </div>

                        <div class="mb-3">
                            <label for="boy" class="form-label">Boy (cm)</label>
                            <input type="number" class="form-control" id="boy" name="boy" placeholder="Boyunuzu girin" required />
                        </div>

                        <div class="mb-3">
                            <label for="kilo" class="form-label">Kilo (kg)</label>
                            <input type="number" class="form-control" id="kilo" name="kilo" placeholder="Kilonuzu girin" required />
                        </div>

                        <div class="mb-3">
                            <label for="hedef" class="form-label">Hedef</label>
                            <select class="form-select" id="hedef" name="hedef" required>
                                <option value="">Seçiniz</option>
                                <option value="kiloAlma">Kilo Alma</option>
                                <option value="kiloVerme">Kilo Verme</option>
                                <option value="kiloSabit">Kilo Sabit Tutma</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Diyet Öner</button>
                    </form>

                    @if (ViewBag.Sonuc != null)
                    {
                        <div class="mt-4 p-3 border rounded bg-light">
                            <h5 class="mb-2">Önerilen Diyet:</h5>
                            <pre class="mb-0">@ViewBag.Sonuc</pre>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
