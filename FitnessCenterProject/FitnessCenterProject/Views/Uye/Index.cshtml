@{
    ViewData["Title"] = "Üye Paneli";
}
<div class="container" style="min-height: 70vh;">

    <!-- HOŞGELDİNİZ MESAJI -->
    <div class="text-center mb-5">
        <br>
        <h2 class="fw-bold">Gym Club'a Hoş Geldiniz!</h2>
        <p class="lead text-muted">
            Hoş geldiniz! Aşağıdaki menüden hizmetler, randevular veya kişisel diyet önerilerinize ulaşabilirsiniz.
        </p>
    </div>

    <div class="row g-4 justify-content-center">

        <!-- HİZMETLER & ANTRENÖRLER -->
        <div class="col-md-4 d-flex justify-content-center">
            <a asp-controller="Uye" asp-action="Hizmetler"
               class="text-decoration-none text-dark">

                <div class="card text-center shadow-lg h-100 hover-card"
                     style="width: 280px; height: 280px;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-people-fill display-3 mb-3 text-primary"></i>
                        <h4 class="card-title">Hizmetler & Antrenörler</h4>
                        <p class="card-text mt-2">
                            Salon hizmetlerini ve antrenörleri görüntüle
                        </p>
                    </div>
                </div>

            </a>
        </div>

        <!-- RANDEVULAR -->
        <div class="col-md-4 d-flex justify-content-center">
            <a asp-controller="Randevu" asp-action="Index"
               class="text-decoration-none text-dark">

                <div class="card text-center shadow-lg h-100 hover-card"
                     style="width: 280px; height: 280px;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-calendar-check-fill display-3 mb-3 text-success"></i>
                        <h4 class="card-title">Randevular</h4>
                        <p class="card-text mt-2">
                            Antrenörlerden randevu al
                        </p>
                    </div>
                </div>

            </a>
        </div>

        <!-- YAPAY ZEKA DİYET ÖNERİSİ -->
        <div class="col-md-4 d-flex justify-content-center">
            <a asp-controller="Diyet" asp-action="Index"
               class="text-decoration-none text-dark">

                <div class="card text-center shadow-lg h-100 hover-card"
                     style="width: 280px; height: 280px;">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <i class="bi bi-robot display-3 mb-3 text-warning"></i>
                        <h4 class="card-title">Yapay Zeka Diyet Önerisi</h4>
                        <p class="card-text mt-2">
                            Boy, kilo, yaş ve hedefine göre diyet önerisi al
                        </p>
                    </div>
                </div>

            </a>
        </div>

    </div>
</div>




<style>
    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .hover-card:hover {
        transform: scale(1.05);
        box-shadow: 0 20px 40px rgba(0,0,0,0.2);
    }
</style>
