@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">

        <h3 class="text-center mb-4">Kayıt Ol</h3>

        <form>
            <div class="mb-3">
                <label class="form-label">Ad Soyad</label>
                <input type="text" class="form-control" placeholder="Adınız Soyadınız" />
            </div>

            <div class="mb-3">
                <label class="form-label">E-posta</label>
                <input type="email" class="form-control" placeholder="ornek@mail.com" />
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre</label>
                <input type="password" class="form-control" placeholder="••••••" />
            </div>

            <div class="mb-3">
                <label class="form-label">Şifre Tekrar</label>
                <input type="password" class="form-control" placeholder="••••••" />
            </div>

            <button class="btn btn-success w-100" type="submit">Kayıt Ol</button>
        </form>

        <p class="text-center mt-3">
            Zaten hesabın var mı?
            <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
        </p>

    </div>
</div>
