<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FitnessCenterProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FitnessCenterProject.styles.css" asp-append-version="true" />
</head>




<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #000; padding: 20px 0;">
            <div class="container">

                <!-- LOGO + TEXT -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                    <div>
                        <span style="font-size:28px; font-weight:700; color:white;">
                            GYM <span style="color:#f2c700;">CLUB</span>
                        </span><br />
                        <span style="font-size:11px; letter-spacing:3px; color:#ccc;">FITNESS • TRAINING • COACHING</span>
                    </div>
                </a>


                <!-- MOBILE TOGGLE -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- MENU ITEMS -->
                <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                    <ul class="navbar-nav" style="gap:25px;">

                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Home" asp-action="About">Hakkımızda</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Home" asp-action="Services">
                                Hizmetlerimiz
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Home" asp-action="Contact">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Account" asp-action="SignUp">Kayıt Ol</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-custom" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                        </li>



                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FitnessCenterProject - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
