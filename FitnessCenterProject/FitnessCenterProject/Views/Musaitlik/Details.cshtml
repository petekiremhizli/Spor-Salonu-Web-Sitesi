@model FitnessCenterProject.Models.Musaitlik

@{
    ViewData["Title"] = "Müsaitlik Detayı";
}

<h2>Müsaitlik Detayı</h2>
<hr />

<div class="card shadow-sm p-4">
    <dl class="row">
        <dt class="col-sm-4">Antrenör</dt>
        <dd class="col-sm-8">@Model.Antrenor?.AdSoyad</dd>

        <dt class="col-sm-4">Tarih</dt>
        <dd class="col-sm-8">@Model.Tarih.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-4">Başlangıç Saati</dt>
        <dd class="col-sm-8">@Model.BaslangicSaati</dd>

        <dt class="col-sm-4">Bitiş Saati</dt>
        <dd class="col-sm-8">@Model.BitisSaati</dd>

        <dt class="col-sm-4">Uzmanlık Alanları</dt>
        <dd class="col-sm-8">
            @if (Model.Antrenor?.AntrenorHizmetler != null &&
                        Model.Antrenor.AntrenorHizmetler.Any())
            {
                foreach (var hizmet in Model.Antrenor.AntrenorHizmetler)
                {
                    <span class="badge bg-primary me-1">
                        @hizmet.Hizmet.Ad
                    </span>
                }
            }
            else
            {
                <span class="text-muted">Tanımlı hizmet yok</span>
            }
        </dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            Düzenle
        </a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger ms-2">
            Sil
        </a>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            Geri Dön
        </a>
    </div>
</div>
