@model IEnumerable<FitnessCenterProject.Models.Musaitlik>

@{
    ViewData["Title"] = "Müsaitlikler";
}

<h2 class="mb-3">Antrenör Müsaitlikleri</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        + Yeni Müsaitlik Ekle
    </a>
    
</div>

<a asp-controller="Adminn" asp-action="Index" class="btn btn-secondary">
    Admin Paneline Dön
</a>
<br />
<br />
<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Antrenör</th>
            <th>Tarih</th>
            <th>Saat Aralığı</th>
            <th>Uzmanlık Alanları</th>
            <th style="width: 220px;">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center text-muted">
                    Henüz müsaitlik eklenmedi.
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.Antrenor?.AdSoyad</td>

                    <td>@item.Tarih.ToString("dd.MM.yyyy")</td>

                    <td>
                        @item.BaslangicSaati.ToString(@"hh\:mm")
                        -
                        @item.BitisSaati.ToString(@"hh\:mm")
                    </td>

                    <td>
                        @if (item.Antrenor?.AntrenorHizmetler != null)
                        {
                            foreach (var ah in item.Antrenor.AntrenorHizmetler)
                            {
                                <span class="badge bg-info me-1">
                                    @ah.Hizmet.Ad
                                </span>
                            }
                        }
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"
                           class="btn btn-info btn-sm">
                            Detay
                        </a>

                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm ms-1">
                            Düzenle
                        </a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm ms-1">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
