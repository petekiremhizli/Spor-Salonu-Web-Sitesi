@model FitnessCenterProject.Models.Musaitlik

@{
    ViewData["Title"] = "Müsaitlik Düzenle";
}

<h2>Müsaitlik Düzenle</h2>
<hr />

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Antrenör -->
    <div class="form-group mb-3">
        <label asp-for="AntrenorId" class="form-label">Antrenör</label>
        <select asp-for="AntrenorId"
                asp-items="ViewBag.Antrenorler"
                class="form-control">
        </select>
        <span asp-validation-for="AntrenorId" class="text-danger"></span>
    </div>

    <!-- Tarih -->
    <div class="form-group mb-3">
        <label asp-for="Tarih" class="form-label">Tarih</label>
        <input asp-for="Tarih" type="date" class="form-control" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <!-- Başlangıç Saati -->
    <div class="form-group mb-3">
        <label asp-for="BaslangicSaati" class="form-label">Başlangıç Saati</label>
        <input asp-for="BaslangicSaati" type="time" class="form-control" />
        <span asp-validation-for="BaslangicSaati" class="text-danger"></span>
    </div>

    <!-- Bitiş Saati -->
    <div class="form-group mb-3">
        <label asp-for="BitisSaati" class="form-label">Bitiş Saati</label>
        <input asp-for="BitisSaati" type="time" class="form-control" />
        <span asp-validation-for="BitisSaati" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
